<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="208dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/adminusser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Thêm ảnh đại diện"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edt_round_gray"
                android:hint="Họ và tên"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/edt_round_gray"
                android:hint="Email"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp" />
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/edt_round_gray"
                android:hint="Password"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/MSSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/edt_round_gray"
                android:hint="MSSV"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/ma_lop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/edt_round_gray"
                android:hint="Mã lớp học"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/edt_round_gray"
                android:hint="SDT đăng kí ở trường"
                android:padding="14dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="24sp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btn_round_gray"
        android:padding="15dp"
        android:text="Lưu thông tin"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>