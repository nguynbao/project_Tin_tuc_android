<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A1A">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/btnUploadDoc"
            android:layout_width="444dp"
            android:layout_height="33dp"
            android:background="#FFFF"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Đăng tải tài liệu"
            android:textColor="#1A1A1A"
            android:textSize="12sp" />


    </LinearLayout>

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên câu lạc bộ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tên câu lạc bộ"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etClubName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="#333333"
                android:hint="Tên câu lạc bộ"
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#" />

            <!-- Mô tả bài đăng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Mô tả bài đăng"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPostDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="#333333"
                android:gravity="top"
                android:hint="Mô tả bài đăng"
                android:input
                android:inputType="textMultiLine"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <!-- Tài liệu đăng tải -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tài liệu đăng tải"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Document Upload Area -->
            <LinearLayout
                android:id="@+id/layoutDocUpload"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="82dp"
                    android:src="@drawable/createadmin"
                    android:tint="#AAAAAA" />

            </LinearLayout>

            <!-- Đăng tải button -->
            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#333333"
                android:text="Đăng tải"
                android:textColor="#1A1A1A"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>