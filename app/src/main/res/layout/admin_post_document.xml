<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A1A">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="253dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/thame_header_gray"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp"
        android:radius="16dp"
        android:rotationX="-6">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/doc" />

        <TextView
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng tải tài liệu"
            android:textColor="#1A1A1A"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="538dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên câu lạc bộ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tên câu lạc bộ"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etClubName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edt_round_gray"
                android:hint="Tên câu lạc bộ"
                android:paddingHorizontal="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#" />

            <!-- Mô tả bài đăng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Mô tả bài đăng"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etPostDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edt_round_gray"
                android:gravity="top"
                android:hint="Mô tả bài đăng"
                android:inputType="textMultiLine"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <!-- Tài liệu đăng tải -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tài liệu đăng tải"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Document Upload Area -->
            <LinearLayout
                android:id="@+id/layoutDocUpload"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="82dp"
                    android:src="@drawable/createadmin"
                    android:tint="#AAAAAA" />

            </LinearLayout>

            <!-- Đăng tải button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_round_gray"
                android:text="Đăng tải"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>